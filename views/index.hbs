    <script>
         const track = document.querySelector('.carousel-track2');
  const items = document.querySelectorAll('.carousel-item2');
  let currentIndex = 0;

  function moveNext() {
    currentIndex++;
    if (currentIndex >= items.length) {
      currentIndex = 0;
    }
    updateCarousel();
  }

  function movePrev() {
    currentIndex--;
    if (currentIndex < 0) {
      currentIndex = items.length - 1;
    }
    updateCarousel();
  }

  function updateCarousel() {
    track.style.transform = `translateX(-${currentIndex * (100 / 3)}%)`;
  }

  setInterval(moveNext, 3000);
    </script>
