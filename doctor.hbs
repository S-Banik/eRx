<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Booking - {{doctor.name}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/doctor.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" href="../assets/eRx.png" type="image/png">
</head>
<body>

    <div id="name-container">
        <div id="name">
            <img id="logo" src="/assets/eRx.png" alt="logo"><span> eRx</span> - by you always
        </div>
    </div>

    {{#if user}}
    <a href="/user-profile" class="login-btn" id="user-info-btn">
        <div class="user-info visible">
            <div class="user-initial">{{user.name.[0]}}</div>
        </div>
    </a>
    {{else}}
        <a href="/login" class="login-btn" id="login-btn">
            <i class="fas fa-user user-icon"></i>
            Login
        </a>
    {{/if}}




    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/doctors">Doctors</a></li>
                <li class="nav-item"><a class="nav-link" href="/hospitals">Hospitals</a></li>
                <li class="nav-item"><a class="nav-link" href="/search">Search</a></li>
                <li class="nav-item"><a style="color: red;" class="nav-link" href="/emergency">Emergency</a></li>
                <li class="nav-item"><a class="nav-link" href="/medicine">Medicines</a></li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid doctor-page">
        <div class="row">
            <div class="col doctor-details">
                <div class="doctor-summary">
                    <div class="doctor-info-box">
                        <div id="doc">
                            <img src="{{doctor.image_url}}" alt="{{doctor.name}}" class="doctor-image">
                            <div class="doctor-brief-info">
                                <h2 class="heading">{{doctor.name}}</h2>
                                <h6 class="text-muted">{{doctor.specialty}}</h6>
                                <p class="experience-text">{{doctor.experience}}</p>
                                <p class="degree-text">{{doctor.degree}}</p>
                                <p class="fee-text" style="color: red;">Consultation Fee: â‚¹{{doctor.fees}}</p>
                                <h6>Hospital: <span id="selected-hospital">None</span></h6>
                                <a class="btn book-btn" id="video-consult-btn">Video Consultation</a>
                            </div>
                        </div>
                        <div class="about-doctor">
                            <h3>Expertise</h3>
                            <p>{{doctor.about}}</p>
                        </div>
                        <div class="about-doctor">
                            <h3>Registration</h3>
                            <p>{{doctor.registration}}</p>
                        </div>
                    </div>

                    <div class="logical-calendar">
                        <h3>Book Appointment</h3>
                        <div class="calender">
                            <div class="header">
                                <button id="prevBtn">
                                    <i class="fa-solid fa-chevron-left"></i>
                                </button>
                                <div class="monthYear" id="monthYear"></div>
                                <button id="nextBtn">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </button>
                            </div>
                            <div class="days">
                                <div class="day">Mon</div>
                                <div class="day">Tue</div>
                                <div class="day">Wed</div>
                                <div class="day">Thu</div>
                                <div class="day">Fri</div>
                                <div class="day">Sat</div>
                                <div class="day">Sun</div>
                            </div>
                            <div class="dates" id="dates"></div>
                        </div>
                        <button class="btn book-btn" id="confirm-appointment-btn" style="background-color: #333;" disabled>Confirm Appointment</button>
                    </div>
                </div>

                <div class="available-hospitals">
                    <h3>Available Hospitals</h3>
                    <div class="hospital-list">
                        {{#each doctor.hospitals}}
                            <div class="hospital-item">
                                <div class="hospital-info">
                                    <h5>{{this.name}}</h5>
                                    <p>Location: {{this.address}}</p>
                                </div>
                                <button class="btn select-hospital-btn" data-hospital="{{this.name}}">Select</button>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/doctor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
